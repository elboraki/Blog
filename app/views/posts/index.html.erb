
<section class="section">
    <div class="container">
    <h2 class="title">Blog index</h2>
    <% @posts.each do |post| %>
        <div class="card">
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <h3 class="title is-4"><%= link_to post.title,post_path(post) %></h3>
                    </div>
                </div>
            </div>

            <div class="content">
                <%= post.content %>
            </div>
        </div>

    <% end %>
    
    </div>

</section>